{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "react",
    "<THIRD_PARTY_MODULES>",
    "^./(.*)$",
    "^../(.*)$",
    "@components/",
    "@pages/",
    "@assets/",
    "@hooks/",
    "@utils/",
    "@types/"
  ],
  "printWidth": 80,
  "trailingComma": "all",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "tailwindConfig": "./tailwind.config.js",
  "tailwindPreserveWhitespace": false
}
